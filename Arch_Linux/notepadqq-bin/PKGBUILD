pkgname=notepadqq-bin
pkgver=0.41.0
_pkgver=0.41.0-0~utopic1
pkgrel=3
pkgdesc="A Linux clone of Notepad++"
arch=('i686' 'x86_64')
url="http://notepadqq.altervista.org/wp/"
license=('GPL3')
depends=('qt5-webkit' 'hicolor-icon-theme' 'desktop-file-utils' 'coreutils>=8.20')
optdepends=('notepadqq-common: Common UI libs')
makedepends=('')
options=('!strip')
provides=("notepadqq=${pkgver}")
conflicts=('notepadqq-git' 'notepadqq')


case ${CARCH} in
	i686)
		_source_arch="i386"
                sha256sums=('97d8e005ed58899e2f807c1f9493211ce86a1ed6d3f7322e8cb9e045e1b4e30f')
		;;
		
	x86_64)
		_source_arch="amd64"
		sha256sums=('3bf4305f041bdf12ee00e1403828b7010f4332c54c28ffb875b89a803052545b')
		depends+=('gcc-libs-multilib')
		;;
esac

source=(https://launchpad.net/~notepadqq-team/+archive/ubuntu/notepadqq/+files/notepadqq_${_pkgver}_${_source_arch}.deb)

package() {
  cd "${srcdir}"
  
  bsdtar -xf data.tar.xz --exclude lintian -C "${pkgdir}"
  
}
